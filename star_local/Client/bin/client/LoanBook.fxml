<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
	fx:controller="client.LoanBookController" spacing="10"
	alignment="CENTER" style="-fx-padding: 20;">
	<Label text="Loan Book to Subscriber"
		style="-fx-font-size: 18px; -fx-font-weight: bold;" />

	<!-- Loan Details -->
	<TextField fx:id="subscriberIdField"
		promptText="Subscriber ID" />
	<TextField fx:id="bookIdField" promptText="Book ID" />
	<DatePicker fx:id="loanDatePicker" promptText="Loan Date" />
	<DatePicker fx:id="returnDatePicker"
		promptText="Return Date" />

	<Label fx:id="errorLabel" text="" style="-fx-text-fill: red;" />

	<!-- Buttons -->
	<Button text="Loan Book" onAction="#handleLoanBook" />
</VBox>
