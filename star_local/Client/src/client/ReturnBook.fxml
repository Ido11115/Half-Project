<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
	fx:controller="client.ReturnBookController" spacing="10"
	alignment="CENTER" style="-fx-padding: 20;">
	<Label text="Return Book"
		style="-fx-font-size: 18px; -fx-font-weight: bold;" />

	<!-- Input Fields -->
	<TextField fx:id="bookIdField" promptText="Book ID" />
	<TextField fx:id="subscriberIdField"
		promptText="Subscriber ID" />

	<Label fx:id="errorLabel" text="" style="-fx-text-fill: red;" />

	<!-- Buttons -->
	<Button text="Return Book" onAction="#handleReturnBook" />
</VBox>
