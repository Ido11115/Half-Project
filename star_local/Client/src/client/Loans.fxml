<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.LoansController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Loans" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TableView fx:id="loansTable" prefWidth="800" prefHeight="400">
        <columns>
            <TableColumn fx:id="loanIdColumn" text="Loan ID" />
            <TableColumn fx:id="subscriberNameColumn" text="Subscriber Name" />
            <TableColumn fx:id="bookIdColumn" text="Book ID" />
            <TableColumn fx:id="loanDateColumn" text="Loan Date" />
            <TableColumn fx:id="returnDateColumn" text="Return Date" />
        </columns>
    </TableView>
    
    <Button text="Prolong Loan" onAction="#handleProlongLoan" />
    
</VBox>
