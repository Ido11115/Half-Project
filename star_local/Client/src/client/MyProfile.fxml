<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="client.MyProfileController"
      spacing="15" alignment="CENTER" style="-fx-padding: 20;">
    <!-- Title -->
    <Label text="My Profile" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Subscriber Data -->
    <GridPane hgap="10" vgap="10">
        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="idLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Label fx:id="nameLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Last Name:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Label fx:id="lastNameLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <Label fx:id="emailLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Phone:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <Label fx:id="phoneLabel" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Username:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <Label fx:id="usernameLabel" GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <Label text="Password:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <Label fx:id="passwordLabel" GridPane.rowIndex="6" GridPane.columnIndex="1" />
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="10">
        <Button text="Edit" onAction="#handleEditProfile" />
        <Button text="Close" onAction="#handleClose" />
    </HBox>
</VBox>
